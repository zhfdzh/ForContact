<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认时的背景-->
    <item android:drawable="@drawable/edittxet_nomal_style" />
    <!-- 没有焦点时的背景 -->
    <item android:state_window_focused="false"
          android:drawable="@drawable/edittxet_nomal_style" />

    <!-- 非触摸模式下获得焦点并单击时的背景 -->
    <item android:state_focused="true" android:state_pressed="true"   android:drawable= "@drawable/edittxet_pressed_style" />
    <!-- 触摸模式下单击时的背景-->
    <item android:state_focused="false" android:state_pressed="true"   android:drawable="@drawable/edittxet_pressed_style" />

    <!--&lt;!&ndash;选中时的图片&ndash;&gt;
    <item android:state_selected="true"   android:drawable="@drawable/pic4" />
    &lt;!&ndash;获得焦点时的图片&ndash;&gt;
    <item android:state_focused="true"   android:drawable="@drawable/pic5" />-->
</selector>